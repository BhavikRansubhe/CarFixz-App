<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OmServiceCenterApptBooking_1">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="149dp"
        android:layout_height="149dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="131dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/omlogo" />

    <Button
        android:id="@+id/selectDateButtonOm"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="25dp"
        android:drawablePadding="6dp"
        android:gravity="left|center"
        android:text="Select Date"
        android:textAlignment="center"
        android:background="@drawable/buttton_background"
        android:backgroundTint="@color/colorBlack"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:strokeColor="@color/colorAccent" />

    <TextView
        android:id="@+id/selectSlotTitleOm"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="25dp"
        android:padding="5dp"
        android:text="Select Appointment Slot"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectDateButtonOm" />

    <Spinner
        android:id="@+id/timeSpinnerOm"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectSlotTitleOm" />

    <TextView
        android:id="@+id/SuggestionsTitle"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="23dp"
        android:gravity="center|left"
        android:text="Any Complaints/Suggestions"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeSpinnerOm" />

    <EditText
        android:id="@+id/complaintsTextBox"
        android:layout_width="356dp"
        android:layout_height="100dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SuggestionsTitle" />

    <Button
        android:id="@+id/bookApptButtonOm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="103dp"
        android:text="BOOK "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complaintsTextBox"
        android:background="@drawable/buttton_background"
        android:backgroundTint="@color/colorBlack"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>